# Get all images for a product
GET http://localhost:3000/product-images/product/1
Authorization: Bearer YOUR_JWT_TOKEN_HERE

###

# Get images by level for a product
GET http://localhost:3000/product-images/product/1/level/gallery
Authorization: Bearer YOUR_JWT_TOKEN_HERE

###

# Get single product image
GET http://localhost:3000/product-images/1
Authorization: Bearer YOUR_JWT_TOKEN_HERE

###

# Update product image
PUT http://localhost:3000/product-images/1
Content-Type: application/json
Authorization: Bearer YOUR_JWT_TOKEN_HERE

{
  "alt": "Updated alt text",
  "position": 2
}

###

# Reorder images
PUT http://localhost:3000/product-images/reorder/1
Content-Type: application/json
Authorization: Bearer YOUR_JWT_TOKEN_HERE

{
  "images": [
    {
      "id": 2,
      "position": 1
    },
    {
      "id": 1,
      "position": 2
    },
    {
      "id": 3,
      "position": 3
    }
  ]
}

